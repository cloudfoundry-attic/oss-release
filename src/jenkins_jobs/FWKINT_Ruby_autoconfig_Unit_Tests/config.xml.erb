  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers class="vector"/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>export PATH=$VCAP_RUBY19/bin:$PATH

RUBY19_REALPATH=`readlink -nf $VCAP_RUBY19`
MYSQLCLIENT_REALPATH=`readlink -nf $VCAP_MYSQLCLIENT`
LIBPQ_REALPATH=`readlink -nf $VCAP_LIBPQ`
CFRUNTIME=$PWD/cfruntime
AUTORECONFIG=$PWD/auto-reconfiguration

TEST_RUNNER=`mktemp`
cat &lt;&lt;-EOT &gt; $TEST_RUNNER
#!/bin/bash
set -o errexit

export PATH=$RUBY19_REALPATH/bin:$PATH
export LIBRARY_PATH=$MYSQLCLIENT_REALPATH/lib/mysql:$LIBPQ_REALPATH/lib:$LIBRARY_PATH
export C_INCLUDE_PATH=$MYSQLCLIENT_REALPATH/include/mysql:$LIBPQ_REALPATH/include:$C_INCLUDE_PATH
export LD_LIBRARY_PATH=$MYSQLCLIENT_REALPATH/lib/mysql:$LIBPQ_REALPATH/lib:$LD_LIBRARY_PATH

cd /tmp/cfruntime
gem build cf-runtime.gemspec
mkdir -p /tmp/auto-reconfiguration/vendor/cache
cp *.gem /tmp/auto-reconfiguration/vendor/cache

cd /tmp/auto-reconfiguration
mkdir /tmp/unused
env BUNDLE_PATH=/tmp/unused bundle package
bundle install --path vendor/bundle
bundle exec rake ci
EOT

HANDLE=`$CREATE_CONTAINER $RUBY19_REALPATH $MYSQLCLIENT_REALPATH $LIBPQ_REALPATH`
$WARDEN_REPL -e -c &quot;
copy $HANDLE in $AUTORECONFIG /tmp
copy $HANDLE in $CFRUNTIME /tmp
copy $HANDLE in $TEST_RUNNER /tmp
run $HANDLE chmod +x $TEST_RUNNER
run $HANDLE $TEST_RUNNER
copy $HANDLE out /tmp/auto-reconfiguration/coverage $AUTORECONFIG vcap:vcap
destroy $HANDLE
&quot;

rm -f $TEST_RUNNER







</command>
    </hudson.tasks.Shell>
  </builders>
