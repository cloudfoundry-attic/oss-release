#!/bin/bash
PACKAGE_DIR=/var/vcap/packages/jenkins

export LD_LIBRARY_PATH=$PACKAGE_DIR/lib:$LD_LIBRARY_PATH
export PATH=$PACKAGE_DIR/bin/:$PATH

expect -c "
set timeout -1;
spawn su - vcap -c \"ssh-keygen -t rsa\"
while {1} {
  expect {
    \"Enter*\"           {send \"\r\"}
    eof                  break
  }
}"

for ip_addr in <%= properties.jenkins_slave.slaves_ip.join(' ') %>
do
  expect -c "
  set timeout -1;
  spawn su - vcap -c \"scp /home/vcap/.ssh/id_rsa.pub vcap@${ip_addr}:/home/vcap/.ssh/authorized_keys\"
  while {1} {
    expect {
      \"Are you sure*\"           {send \"yes\r\"}
      \"*password\"               {send \"<%= properties.jenkins_slave.password %>\r\"}
      eof                         break
    }
  }"
done
