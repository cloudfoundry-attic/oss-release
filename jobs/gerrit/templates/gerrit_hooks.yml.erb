#notify configures the mail notification hooks
notify:
<% if properties.gerrit && properties.gerrit.uri %>
  from: gerrit2@<%= properties.gerrit.uri %>
<% else %>
  from: gerrit2@gerrit.<%= properties.domain %>
<% end %>
  maillist:  <%= properties.gerrit.maillist %>
  smtpserver: <%= properties.gerrit.smtp_server %>
  port: <%= properties.gerrit.smtp_port||25 %>
  user: <%= properties.gerrit.smtp_user %>
  password: <%= properties.gerrit.smtp_pass %>
gerrit:
  ssh_port: <%= properties.gerrit.ssh_port %>
